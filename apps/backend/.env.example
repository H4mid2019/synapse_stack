# Flask Configuration
SECRET_KEY=your-secret-key-here

# Database Configuration
# For local development (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/flask_react_db

# For production (CockroachDB)
# DATABASE_URL=postgresql://username:password@host:26257/defaultdb?sslmode=verify-full
# or
# DATABASE_URL=cockroachdb://username:password@host:26257/defaultdb?sslmode=verify-full

# Explicitly use CockroachDB (optional, auto-detected if URI contains 'cockroachlabs.cloud')
# USE_COCKROACHDB=true

# Test Mode (for E2E tests)
TEST_MODE=false

# Google Cloud Storage (optional)
GCS_BUCKET_NAME=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Auth0 Configuration (optional)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_API_AUDIENCE=your-api-audience
